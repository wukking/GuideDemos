<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <TextView
        android:id="@+id/tv_vm_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前VM数据："
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_obj_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前obj数据："
        app:layout_constraintTop_toBottomOf="@id/tv_vm_data"
        app:layout_constraintStart_toStartOf="@id/tv_obj_data"/>

    <Button
        android:id="@+id/btn_vm_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新vm数据"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_obj_data" />

    <Button
        android:id="@+id/btn_obj_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新obj数据"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_vm_update" />
</androidx.constraintlayout.widget.ConstraintLayout>